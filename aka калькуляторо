#include <iostream>

using namespace std;
void main()
{
	setlocale(LC_ALL, "RUS");
	int a,b;
	char var;
	cout << "Введите 2 числа" << endl;
	cin >> a >> b;
	cout << "Выберите математическую операцию" << endl;
	cin >> var;
	cout << "Результат:" << endl;
	switch (var)
	{
	case '+':
		cout << a << "+" << b << "=" << a + b << endl;
		break;

	case '-':
		cout << a << "-" << b << "=" << a - b << endl;
		break;

		case '/':
			if  (b != 0)
				cout << a << "/" << b << "=" << (double) a / b << endl;
			else
				cout << "Делить на ноль нельзя" << endl;
			break;

		case '*':
			cout << a << "*" << b << "=" << a * b << endl;
			break;
			
		default:
			cout << "Такой операции нет" << endl;
			break;
	}
	
}
